<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <!--form_tag・・・modelに基づかないformを作成する(検索機能)https://www.for-engineer.life/entry/rails-search-form/-->
      <%= form_tag(users_path, :method => "get") do %>
        <%= text_field_tag :search %>
        <%= submit_tag "検索" ,:name => nil ,class: "btn btn-primary btn-sm text-center"%>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card-body">
        <table class="table table-borderless">
          <thead>
            <tr>
              <th style="font-family: cursive;">ProfileImage</th>
              <th style="font-family: cursive;">Name</th>
              <th style="font-family: cursive;">FollowStatus</th>
              <th colspan="3"></th>
            <tr>
          </thead>

        <% if users.exists? %>
          <% users.each do |user| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, fallback: "no-image.jpg" %>
                  <% end %>
                </td>

                <td style="padding-top: 80px;"><%= user.name %></td>

                <td style="padding-top: 80px;"><%= render 'users/info', user: user %></td>
              </tr>
            </tbody>
          <% end %>
          <hr>
        <% else %>
          <p>ユーザーがいません</p>
        <% end %>

        </table>
      </div>
    </div>
  </div>





