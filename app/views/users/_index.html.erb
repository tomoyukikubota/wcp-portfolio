<div class="container">
  <div class="row">
    <% if users.exists? %>
      <% users.each do |user| %>
        <div class="col-auto  col-md-3 mt-5 pl-5">
          <span style="font-family: cursive;">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no-image.jpg", class: "rounded-circle" %><br>
            <% end %>
          <span>Name: <%= user.name %></span><br>
          <span class="follow-btn_<%= user.id %>"><%= render 'users/info', user: user %></span>
          </span>

        </div>
      <% end %>

    <% else %>
      <p>ユーザーがいません</p>
    <% end %>
  </div>
</div>


















