<div class="card-body">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th></th>
        <th style="font-family: cursive;">Name</th>
        <th style="font-family: cursive;">Status</th>
        <th colspan="3"></th>
      <tr>
    </thead>

  <% if users.exists? %>
    <% users.each do |user| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.jpg" %>
            <% end %>
          </td>

          <td class="pt-5"><%= user.name %></td>

          <td class="pt-5"><%= render 'users/info', user: user %></td>

        </tr>
      </tbody>
    <% end %>
  <% else %>
    <p>ユーザーがいません</p>
  <% end %>

  </table>
</div>
