<div class="image">
  <div class="container">
    <div class="row">

      <div class="col-6 mx-auto field-tag">
        <h2 class="fadeUp", style="font-family: cursive;">Log in</h2>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field mt-2 fadeUp">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mt-2 fadeUp">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br />
          </div>

          <div class="actions fadeUp">
            <%= f.submit "ログイン", class: "btn btn-info btn-md" %>
          </div>
        <% end %>

        <!--<= render "devise/shared/links" %>-->
      </div>

    </div>
  </div>
</div>







