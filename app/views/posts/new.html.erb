<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="form-body p-4">
        <%= form_with model: @post, local:true do |f| %>
          <div class="fadeUp">

            <%= f.label :写真 %><br />
            <%= f.file_field :images, multiple: true %><br />
            <br />

            <%= f.label :タイトル %>
            <%= f.text_field :title, class:"form-control" %><br />

            <%= f.label :詳細 %>
            <%= f.text_area :body, class:"form-control", rows:"3" %><br />

            <%= f.submit '新規投稿', class:"btn btn-md btn-info mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
